<Window x:Class="Istorie.AlegeLectie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alege lectia" Height="110" Width="250">
    <Window.Background>
        <RadialGradientBrush GradientOrigin="1,0.5" RadiusX="6" RadiusY="0.8">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF787878" Offset="1"/>
            <GradientStop Color="#FF020400"/>
            <GradientStop Color="White"/>
            <GradientStop Color="#FFDEDEDE" Offset="0.911"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Margin="0,7,0,0">Alege lectia</Label>
        <StackPanel Grid.Column="1">
            <ComboBox Height="20" Margin="10" Name="lectieSelectata"></ComboBox>
            <Button Margin="10,0,10,0" Click="Button_MouseLeftButtonDown_1">Selecteaaza lectia</Button>
        </StackPanel>
    </Grid>
</Window>
