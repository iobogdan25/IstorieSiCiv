<Window x:Class="Istorie.IncarcaRebus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IncarcaRebus" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="20">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="20">SE GENEREAZA REBUSUL</Label>
            <Label HorizontalAlignment="Center">Alege cuvantul cheie</Label>
            <ComboBox Name="_cuvantCheie" Width="100" SelectedIndex="0">
                <ComboBoxItem>Istorie</ComboBoxItem>
                <ComboBoxItem>Consolidare</ComboBoxItem>
                <ComboBoxItem>Virtual</ComboBoxItem>
                <ComboBoxItem>Evolutie</ComboBoxItem>
                <ComboBoxItem>Educatie</ComboBoxItem>
            </ComboBox>
            <Label HorizontalAlignment="Center" Width="170" HorizontalContentAlignment="Center" FontSize="18" Margin="0,25,0,0" Background="#FF17FF17" FontWeight="Bold" MouseLeftButtonDown="Label_MouseLeftButtonDown_1">GENERARE</Label>
        </StackPanel>
    </Grid>
</Window>
